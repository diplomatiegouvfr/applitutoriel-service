<?xml version="1.0" encoding="UTF-8"?>
<!-- Configuration de Spring, specialement pour les couches DAO : - precise la configuration iBatis, - precise le mode de 
	connexion utilise - et indique a Spring s'il doit utiliser le mode "transaction par annotation" -->
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:tx="http://www.springframework.org/schema/tx" xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.1.xsd
http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-4.1.xsd
http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-4.1.xsd">

	<bean id="jdbcPropertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:jdbc.properties" />
		<property name="placeholderPrefix" value="$jdbc{" />
	</bean>

	<!-- Initialisation de la datasource -->
	<bean id="dataSource" class="org.apache.commons.dbcp.ManagedBasicDataSource">
  	    <constructor-arg value="org.apache.commons.dbcp:ManagedBasicDataSource=$jdbc{jdbc.jmxname}"/>
		<property name="driverClassName" value="$jdbc{jdbc.driver}" />
		<property name="url" value="$jdbc{jdbc.url}" />
		<property name="username" value="$jdbc{jdbc.username}" />
		<property name="password" value="$jdbc{jdbc.password}" />

		<!-- paramètres propres au pool de connexion -->
		<property name="validationQuery" value="$jdbc{jdbc.validationQuery}" />
		<property name="maxActive" value="$jdbc{jdbc.maxActive}" />
		<property name="maxIdle" value="$jdbc{jdbc.maxIdle}" />
		<property name="maxWait" value="$jdbc{jdbc.maxWait}" />
		<property name="testOnBorrow" value="$jdbc{jdbc.testOnBorrow}" />
		<property name="testWhileIdle" value="$jdbc{jdbc.testWhileIdle}" />
		<property name="timeBetweenEvictionRunsMillis" value="$jdbc{jdbc.timeBetweenEvictionRunsMillis}" />
		<property name="numTestsPerEvictionRun" value="$jdbc{jdbc.numTestsPerEvictionRun}" />
		<property name="removeAbandoned" value="$jdbc{jdbc.removeAbandoned}" />
		<property name="removeAbandonedTimeout" value="$jdbc{jdbc.removeAbandonedTimeout}" />
		<property name="logAbandoned" value="$jdbc{jdbc.logAbandoned}" />
	</bean>

	<!-- Initialisation de la base de données -->
	<jdbc:initialize-database data-source="dataSource" enabled="$jdbc{jdbc.hsqldb}">
		<jdbc:script location="classpath:sql/01-createTablesHsqldb.sql" />
		<jdbc:script location="classpath:sql/02-initDataHsqldb.sql" />
	</jdbc:initialize-database>

	<jdbc:initialize-database data-source="dataSource" enabled="$jdbc{jdbc.postgres}">
		<jdbc:script location="classpath:sql/01-createTablesPostgres.sql" />
		<jdbc:script location="classpath:sql/02-initDataPostgres.sql" />
	</jdbc:initialize-database>
</beans>