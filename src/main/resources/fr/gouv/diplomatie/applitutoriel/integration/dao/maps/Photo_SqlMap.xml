<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="photo">


	<resultMap type="fr.gouv.diplomatie.applitutoriel.business.bo.Photo" id="mapPhoto">
		<result column="ID_PHOTO" property="id" />
		<result column="NOM" property="nom" />
		<result column="MIMETYPE" property="mimeType" />
		<result column="SIZE" property="size" />
		<result column="ENCODING" property="encoding" />		
		<result column="CONTENU" property="buffer" />
	</resultMap>
	
	<select id="selectById" resultMap="mapPhoto">
        SELECT ID_PHOTO, NOM, MIMETYPE, ENCODING, SIZE, CONTENU
        FROM PHOTO
        WHERE ID_PHOTO = #{id};
    </select>
	
	<insert id="insert" parameterType="fr.gouv.diplomatie.applitutoriel.business.bo.Photo"
		useGeneratedKeys="true" keyProperty="id" keyColumn="ID_PHOTO" >
		INSERT INTO PHOTO
		(
		 NOM,MIMETYPE,ENCODING,SIZE,CONTENU
		)
		VALUES
		(
		#{nom}, #{mimeType}, #{encoding},#{size}, #{buffer}
		);	
	</insert>
	
	<delete id="delete"  parameterType="long">
		DELETE FROM PHOTO WHERE ID_PHOTO = #{id}
	</delete>
</mapper>